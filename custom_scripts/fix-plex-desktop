#!/usr/bin/env bash

set -e

if [[ -f /opt/plex-desktop/bin/Plex ]]; then
  echo "üîß Patching Plex Desktop RUNPATHs..."
  chrpath -r '$ORIGIN/../lib' /opt/plex-desktop/bin/Plex
  chrpath -r '$ORIGIN/../lib' "/opt/plex-desktop/bin/Plex Transcoder"

  echo "‚úÇÔ∏è  Removing LD_LIBRARY_PATH from Plex.sh..."
  sed -i '/LD_LIBRARY_PATH/d' /opt/plex-desktop/Plex.sh
else
  echo "‚ö†Ô∏è  Plex binaries not found ‚Äî skipping fix."
fi
